# Application Configuration
APP_NAME="CNA Upholstery Management System"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=America/New_York

# Security
APP_KEY=your-secret-app-key-here-32-characters
JWT_SECRET=your-jwt-secret-key-here-64-characters
CSRF_TOKEN_EXPIRE=3600

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=cna_upholstery
DB_USERNAME=your_username
DB_PASSWORD=your_password

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=cna-upholstery-images
AWS_URL=https://your-bucket.s3.amazonaws.com

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="CNA Upholstery"

# Business Configuration
BUSINESS_NAME="CNA Upholstery"
BUSINESS_ADDRESS="Your Business Address"
BUSINESS_PHONE="(555) 123-4567"
BUSINESS_EMAIL="info@your-domain.com"
TAX_RATE=6.625

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=60

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict